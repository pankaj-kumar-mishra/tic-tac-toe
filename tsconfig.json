{
    "extends": "expo/tsconfig.base",
    "compilerOptions": {
        "strict": true,
        "baseUrl": ".",
        "paths": {
            "@screens": ["src/screens"],
            "@components": ["src/components"],
            "@utils": ["src/utils"],
            "@contexts/*": ["src/contexts/*"],
            "@config/*": ["src/config/*"],
            "@assets/*": ["assets/*"],
            "@hooks": ["src/hooks"]
        }
    },
    "exclude": ["node_modules", "final-tic-tac-toe"]
}
